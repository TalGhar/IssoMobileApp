<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pageBuild"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragmentBuild">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/btnBuild"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/build"
            android:textColor="#000000"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnSells"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="false"
            android:text="@string/sells"
            android:textColor="#000000"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/btnProfile"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/profile"
            android:textColor="#000000"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/textAdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textAdv"
        tools:ignore="VisualLintOverlap" />

    <ScrollView
        android:id="@+id/scrollAdv"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/image1" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/image2" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/image3" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textBuild"
        tools:ignore="VisualLintOverlap" />

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnFavorite"
        tools:ignore="VisualLintOverlap" />

    <Button
        android:id="@+id/btnFlats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnFlasts"
        tools:ignore="VisualLintOverlap" />

    <Button
        android:id="@+id/btnCommerce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCommerce"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:id="@+id/textNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textNews"
        tools:ignore="VisualLintOverlap" />

    <ScrollView
        android:id="@+id/scrollNews"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/image4" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/image5" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars"
                android:contentDescription="@string/image6" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>