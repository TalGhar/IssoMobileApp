<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuildsFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Заголовок страницы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Постройки"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"/>

        <!-- Кнопки для быстрого перехода к разным типам построек -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Кнопка для выбора типа построек -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 1"
                    android:background="@drawable/rounded_button"
                    />

                <!-- Кнопка для выбора типа построек -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 2"
                    android:background="@drawable/rounded_button"
                    />

                <!-- Кнопка для выбора типа построек -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 3"
                    android:background="@drawable/rounded_button"
                    />

                <!-- Кнопка для выбора типа построек -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип 4"
                    android:background="@drawable/rounded_button"
                    />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Контейнер для горизонтальных списков построек -->
        <LinearLayout
            android:id="@+id/building_lists_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"/>

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>